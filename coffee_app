<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>Coffee Shop</title>
	<style>*{font-size: 40px;} body{ background-color: darkslategray; color: antiquewhite;} </style>
	<script>
		function order(){
			let name = document.getElementById("name");
			let small = document.getElementById("small");
			let medium = document.getElementById("medium");
			let large = document.getElementById("large");
			let ans = document.getElementById("ans");

			if(name.value === "" || !name.value.match(/^[A-Za-z]+( [A-Za-z]+)*$/)){
				alert("Invalid input");
				name.value="";
				ans.innerHTML="";
				name.focus();
				return
			}
			let s = ""
			if(small.checked) 	s="Small";
			else if(medium.checked)	s="Medium";
			else	s="Large";
			let msg="Your order Details are --> Name:"+name.value+" Coffee Size:"+s;
			ans.innerHTML=msg;
		}
	</script>
</head>
<body>
	<center>
		<h1>Order here</h1>
		<input type="text" placeholder="Enter your name" id="name" autocomplete="off"/>
		<br><br>
		<input type="radio" name="s" value="small" id="small">Small </input>
		<input type="radio" name="s" value="medium" id="medium" checked="true">Medium </input>
		<input type="radio" name="s" value="large" id="large">Large </input>
		<br><br>
		<input type="submit" value="Order" onclick="order()"/>
		<br>
		<h3 id="ans"></h3>
	</center>
</body>
</html>
